@model FlexBackend.USER.Rcl.Areas.USER.Controllers.AdminUserVm
@{
    ViewData["Title"] = "員工詳細資料";
}
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">頭像</div>
            <div class="card-body text-center">
                <img src="/USER/Admins/Photo/@Model.Id" alt="Photo" class="img-fluid rounded mb-3" style="max-height:260px;" />
                <form asp-action="UploadPhoto" asp-controller="Admins" asp-area="USER" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="file" class="form-control mb-2" name="photo" accept="image/*" required />
                    <button class="btn btn-primary w-100" type="submit">上傳新照片</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">基本資料</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">姓名</dt>
                    <dd class="col-sm-9">@($"{Model.LastName}{Model.FirstName}")</dd>
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    <dt class="col-sm-3">電話</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>
                    <dt class="col-sm-3">啟用</dt>
                    <dd class="col-sm-9">@(Model.IsActive ? "是" : "否")</dd>
                    <dt class="col-sm-3">建立時間</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                    <dt class="col-sm-3">角色</dt>
                    <dd class="col-sm-9">@string.Join(", ", Model.Roles)</dd>
                </dl>
                <a class="btn btn-outline-secondary" href="/USER/Admins">返回列表</a>
            </div>
        </div>
    </div>
</div>
