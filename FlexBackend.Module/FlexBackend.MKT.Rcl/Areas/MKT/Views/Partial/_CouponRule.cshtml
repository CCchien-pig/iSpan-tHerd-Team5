@model FlexBackend.Infra.Models.MktCouponRule

<div class="modal-header">
    <h5 class="modal-title">新增優惠規則</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <form id="createRuleForm">
        <!-- 優惠券類型 -->
        <div class="mb-3">
            <label class="form-label">優惠券類型</label>
            <select id="CouponType" name="CouponType" class="form-select" required>
                <option value="pmd" selected>滿額折扣</option>
                <option value="ppd">點數回饋</option>
            </select>
        </div>

        <!-- 使用門檻 (同一組輸入框) -->
        <div class="mb-3">
            <label class="form-label">使用門檻</label>
            <div class="input-group">
                <span id="prefix" class="input-group-text">單筆消費滿</span>
                <input type="number" id="DefaultCondition" name="DefaultCondition"
                       class="form-control" placeholder="請輸入" min="0" />
                <span id="suffix" class="input-group-text">元</span>
            </div>
        </div>

        <!-- 說明 -->
        <div class="mb-3">
            <label class="form-label">說明</label>
            <textarea name="Description" class="form-control"></textarea>
        </div>

        <!-- 建檔人員 -->
        <div class="mb-3">
            <label class="form-label">建檔人員</label>
            <input type="number" class="form-control" id="createCreator" name="Creator" value="" />
        </div>

        <!-- 建檔時間 -->
        <div class="mb-3">
            <label class="form-label">建檔時間</label>
            <input type="text" class="form-control" id="createCreatedDate" name="CreatedDate"
                   value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" readonly />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" id="saveRuleBtn" class="btn btn-primary">儲存</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
</div>

<script>
    // 儲存規則
    $("#saveRuleBtn").off("click").on("click", function(){
        var form = $("#createRuleForm");
        var data = {
            CouponType: form.find("[name='CouponType']").val().trim(),
            DefaultCondition: form.find("[name='DefaultCondition']").val().trim(),
            Description: form.find("[name='Description']").val().trim(),
            IsActive: true,
            Creator: parseInt(form.find("[name='Creator']").val()) || 1
        };

        // 前端驗證
        if(!data.CouponType)
            return Swal.fire("錯誤","優惠券類型必填","error");

        $.ajax({
            url: '@Url.Action("CreateRule", "Coupons", new { area = "MKT" })',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(res){
                if(res.success){
                    Swal.fire("成功","優惠規則已新增！","success").then(()=>{
                        $("#couponRuleModal").modal("hide");

                        // 重新刷新 create/edit 的規則下拉選單
                        if(typeof loadRules === "function") {
                            loadRules("#createRuleId", res.ruleId);
                            loadRules("#editRuleId", res.ruleId);
                        }
                    });
                } else {
                    Swal.fire("錯誤", res.message, "error");
                }
            },
            error: function(){
                Swal.fire("錯誤","新增失敗","error");
            }
        });
    });

    // 優惠券類型切換（用 jQuery 寫法）
    $(document).on("change", "#CouponType", function () {
        var prefix = $("#prefix");
        var suffix = $("#suffix");
        var input  = $("#DefaultCondition");

        if (this.value === "cmd") {
            prefix.text("單筆消費滿");
            suffix.text("元");
            input.attr("placeholder", "請輸入金額").removeAttr("max");
        } else if (this.value === "ppd") {
            prefix.text("點數回饋");
            suffix.text("%");
            input.attr("placeholder", "請輸入比例").attr("max", "50");
        }
    });

</script>
