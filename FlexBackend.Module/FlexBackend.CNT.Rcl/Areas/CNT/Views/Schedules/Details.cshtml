@model FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.ScheduleListVM
@{
    ViewData["Title"] = "排程詳情";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/backtotop.css" asp-append-version="true" />
    <style>
        .bg-pink {
            background-color: #d63384 !important;
        }

        .bg-purple {
            background-color: #6f42c1 !important;
        }
    </style>
}

<partial name="_AlertMessage" />

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-info-subtle text-dark fw-bold">
        📋 排程詳情
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">排程編號</dt>
            <dd class="col-sm-9">@Model.ScheduleId</dd>

            <dt class="col-sm-3">文章標題</dt>
            <dd class="col-sm-9">@Model.PageTitle</dd>

            <dt class="col-sm-3">文章分類</dt>
            <dd class="col-sm-9">@Model.PageTypeName</dd>

            <dt class="col-sm-3">文章動作</dt>
            <dd class="col-sm-9"><span class="badge @Model.ActionBadgeClass">@Model.ActionTypeText</span></dd>

            <dt class="col-sm-3">預定時間</dt>
            <dd class="col-sm-9">@Model.ScheduledDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">文章狀態</dt>
            <dd class="col-sm-9"><span class="badge @Model.StatusBadgeClass">@Model.StatusText</span></dd>
        </dl>

        <!-- ✅ 保留 PageId，方便後續操作 -->
        <input type="hidden" asp-for="PageId" />
        <hr />
        <div class="d-flex gap-3 mt-3">
            <a class="btn btn-outline-secondary btn-lg"
               asp-area="CNT" asp-controller="Schedules" asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-pageSize="@ViewBag.PageSize"
               asp-route-keyword="@ViewBag.Keyword"
               asp-route-status="@ViewBag.Status"
               asp-route-actionType="@ViewBag.ActionType"
               asp-route-pageTypeId="@ViewBag.PageTypeId">🔙 返回列表</a>

            <a class="btn btn-outline-warning btn-lg"
               asp-area="CNT" asp-controller="Schedules" asp-action="Edit"
               asp-route-id="@Model.ScheduleId">✏️ 編輯</a>
        </div>
    </div>

    <button onclick="scrollToTop()" id="btnTop" class="btn rounded-circle shadow-lg"
            data-bs-toggle="tooltip" data-bs-placement="left" title="回到頂部">
        <i class="bi bi-arrow-up-short fs-2"></i>
    </button>
</div>

@section Scripts {
    <script>
        function scrollToTop() { window.scrollTo({ top: 0, behavior: 'smooth' }); }
        window.addEventListener("scroll", function () {
            let btn = document.getElementById("btnTop");
            if (document.documentElement.scrollTop > 200) btn.classList.add("show");
            else btn.classList.remove("show");
        });
    </script>
}
