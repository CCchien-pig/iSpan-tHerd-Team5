@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.ScheduleListVM>
@{
    string sortField = ViewBag.SortField ?? "ScheduledDate";
    string sortOrder = ViewBag.SortOrder ?? "asc";
}
@section Styles{       
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/backtotop.css" asp-append-version="true" />    
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/fixedtable.css" asp-append-version="true" />  
    <style>
        .badge { font-size: 0.76rem; padding: 0.35em 0.6em; }
        .bg-pink { background-color: #d63384 !important; }
        .bg-purple { background-color: #6f42c1 !important; }
        th a { text-decoration:none; }
        th i { margin-left: 4px; }
    </style>
}
<partial name="_AlertMessage" />

<!-- 🔍 查詢表單 -->
<form asp-area="CNT" asp-controller="Schedules" asp-action="Index" method="get" class="mb-2 d-flex align-items-center">
    @Html.AntiForgeryToken()
    <!--<div class="d-flex align-items-center me-auto">
        <a asp-action="Index" asp-area="CNT" asp-controller="Schedules"
           class="btn btn-outline-secondary btn-lg text-dark fw-bold">
            📑 排程管理
        </a>
    </div>-->

    <div class="mx-auto">
        <div class="input-group input-group-sm" style="max-width:1500px;">

            <!-- 每頁筆數 -->
            <span class="input-group-text bg-secondary-subtle">每頁筆數</span>
            <select name="pageSize" class="form-select form-select-sm"
                    style="max-width:84px;"
                    asp-items="ViewBag.PageSizeList"
                    onchange="this.form.submit()">
            </select>

            <!-- 文章分類 -->
            <span class="input-group-text bg-secondary-subtle">文章分類</span>
            <select name="pageTypeId" class="form-select form-select-sm"
                    style="max-width:120px;"
                    asp-items="ViewBag.PageTypeList"
                    onchange="this.form.submit()">            
            </select>

            <!-- 文章狀態 -->
            <span class="input-group-text bg-secondary-subtle">文章狀態</span>
            <select name="pageStatus" class="form-select form-select-sm"
                    style="max-width:120px;"
                    asp-items="ViewBag.PageStatusList"
                    onchange="this.form.submit()">
            </select>

            <!-- 預約動作 -->
            <span class="input-group-text bg-secondary-subtle">預約動作</span>
            <select name="actionType" class="form-select form-select-sm"
                    style="max-width:140px;"
                    asp-items="ViewBag.ActionTypeList"
                    onchange="this.form.submit()">                
            </select>

            <!-- 排程執行狀態 -->
            <span class="input-group-text bg-secondary-subtle">排程執行狀態</span>
            <select name="scheduleStatus" class="form-select form-select-sm"
                    style="max-width:120px;"
                    asp-items="ViewBag.ScheduleStatusList"
                    onchange="this.form.submit()">
            </select>

            <!-- 關鍵字 -->
            <input type="text" name="keyword"
                   value="@System.Net.WebUtility.HtmlEncode(ViewBag.Keyword)"
                   class="form-control form-control-sm"
                   style="max-width:360px;"
                   placeholder="搜尋文章標題..." />

            <!-- 查詢 / 清除 -->
            <button type="submit" class="btn btn-secondary btn-sm">🔍 查詢</button>
            <a asp-area="CNT" asp-controller="Schedules" asp-action="Index" class="btn btn-outline-dark btn-sm">❌ 清除</a>
        </div>
    </div>
</form>

@if (ViewBag.ActiveFilters != null && ((List<(string Label, string Value, string RemoveUrl)>)ViewBag.ActiveFilters).Any())
{
    <div class="alert alert-info py-2 px-3 d-flex align-items-center flex-wrap">
        <span class="me-2 fw-bold">篩選條件：</span>

        @foreach (var f in (List<(string Label, string Value, string RemoveUrl)>)ViewBag.ActiveFilters)
        {
            <span class="badge bg-success text-white me-2">
                @f.Label：@f.Value
                <a href="@f.RemoveUrl" class="text-white ms-1" style="text-decoration:none;">✕</a>
            </span>
        }

        <a href="@Url.Action("Index", new { pageSize = ViewBag.PageSize })"
           class="btn btn-sm btn-outline-dark ms-2">❌ 清除全部</a>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-secondary-subtle text-dark fw-bold d-flex align-items-center">
        ⏰ 排程管理
    </div>
    <!-- ✅ 固定高度 + 捲動 -->
    <div class="card-body" style="max-height:600px; overflow-y:auto;">
        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>
                        ID
                        <a asp-action="Index" asp-route-sortField="ScheduleId"
                           asp-route-sortOrder="@(sortField=="ScheduleId" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "ScheduleId")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                        📄 文章標題
                        <a asp-action="Index" asp-route-sortField="PageTitle"
                           asp-route-sortOrder="@(sortField=="PageTitle" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "PageTitle")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                        📂 文章分類
                        <a asp-action="Index" asp-route-sortField="PageTypeName"
                           asp-route-sortOrder="@(sortField=="PageTypeName" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "PageTypeName")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                        📌 文章狀態
                        <a asp-action="Index" asp-route-sortField="PageStatus"
                           asp-route-sortOrder="@(sortField=="PageStatus" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "PageStatus")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                        ⚡ 預約動作
                        <a asp-action="Index" asp-route-sortField="ActionType"
                           asp-route-sortOrder="@(sortField=="ActionType" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "ActionType")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                      ⏰ 預定時間
                        <a asp-action="Index" asp-route-sortField="ScheduledDate"
                           asp-route-sortOrder="@(sortField=="ScheduledDate" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "ScheduledDate")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>
                        📌 排程執行狀態
                        <a asp-action="Index" asp-route-sortField="Status"
                           asp-route-sortOrder="@(sortField=="Status" && sortOrder=="asc" ? "desc" : "asc")"
                           class="ms-1">
                            @if (sortField == "Status")
                            {
                                <i class="bi @(sortOrder=="asc" ? "bi-caret-up-fill" : "bi-caret-down-fill") text-white"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-up text-white"></i>
                            }
                        </a>
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ScheduleId</td>
                        <td>@item.PageTitle</td>
                        <td>@item.PageTypeName</td>
                        <td><span class="badge @item.PageStatusBadgeClass">@item.PageStatusText</span></td>
                        <td><span class="badge @item.ActionBadgeClass">@item.ActionTypeText</span></td>
                        <td>
                            <input type="text"
                                   class="form-control form-control-sm datepicker-inline"
                                   value="@item.ScheduledDate.ToString("yyyy-MM-dd HH:mm")"
                                   data-id="@item.ScheduleId"
                                   readonly />
                        </td>
                        <td><span class="badge @item.StatusBadgeClass">@item.StatusText</span></td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-outline-warning text-dark mb-1">✏️ 編輯</a>
                            <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-outline-info text-dark mb-1">ℹ️ 詳情</a>
                            <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-outline-danger mb-1"
                               onclick="return confirm('確定要刪除這筆排程嗎？此操作無法復原');">🗑️ 刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center mb-2 text-muted">
        顯示第 <strong>@Model.FirstItemOnPage</strong> - <strong>@Model.LastItemOnPage</strong> 筆，
        共 <strong>@Model.TotalItemCount</strong> 筆資料
        （每頁 <strong>@Model.PageSize</strong> 筆，共 <strong>@Model.PageCount</strong> 頁）
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-center flex-grow-1">
                @Html.PagedListPager(
                    Model,
                    page => Url.Action("Index", new { 
                        area = "CNT",
                        controller = "Schedules",
                        action = "Index",
                        page,
                        keyword = ViewBag.Keyword,
                        scheduleStatus = ViewBag.ScheduleStatus,
                        actionType = Context.Request.Query["actionType"],
                        pageSize = Model.PageSize,
                        pageTypeId = Context.Request.Query["pageTypeId"],
                        pageStatus = ViewBag.PageStatus,
                        sortField = sortField,
                        sortOrder = sortOrder
                    }),
                    new PagedListRenderOptions
                    {
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        UlElementClasses = new[] { "pagination" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }
                    }
                )
            </div>
        </div>
    </div>

    <!-- ⬆️ 回頂部 -->
    <button onclick="scrollToTop()" id="btnTop"
            class="btn rounded-circle shadow-lg"
            data-bs-toggle="tooltip" data-bs-placement="left" title="回到頂部">
        <i class="bi bi-arrow-up-short fs-2"></i>
    </button>
</div>

@section Scripts {
    <script>
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        window.addEventListener("scroll", function () {
            let btn = document.getElementById("btnTop");
            if (document.documentElement.scrollTop > 200) {
                btn.classList.add("show");
            } else {
                btn.classList.remove("show");
            }
        });
    </script>

    <!--獨立index使用時間套件-->
    <!-- Index 專用時間套件 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/plugins/confirmDate/confirmDate.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/plugins/confirmDate/confirmDate.css">
        <!--獨立index使用時間套件-->
        <script>
        $(function () {
            flatpickr("input.datepicker-inline", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                minDate: "today",
                plugins: [new confirmDatePlugin({          // ✅ 啟用確認按鈕
                    confirmText: "確定",
                    showAlways: false,
                    theme: "light"                         // 可選: "dark"
                })],
                onClose: function (selectedDates, dateStr, instance) {
                    if (selectedDates.length > 0) {
                        let scheduleId = $(instance.input).data("id");
                        let localDate = new Date(selectedDates[0].getTime() - (selectedDates[0].getTimezoneOffset() * 60000)); 
                        let newDate = localDate.toISOString();  // ✅ 這樣就是 UTC+8 對應的 ISO

                        $.ajax({
                            url: '@Url.Action("UpdateTime", "Schedules", new { area = "CNT" })',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({ id: scheduleId, scheduledDate: newDate }),
                            headers: {
                                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                            },
                            success: function (res) {
                                if (res.success) {
                                    toastr.success("✅ 時間已更新！");
                                    instance.input.defaultValue = dateStr;
                                } else {
                                    toastr.error("⚠️ " + (res.message || "輸入不合法"));
                                    instance.setDate(instance.input.defaultValue, true);
                                }
                            },
                            error: function () {
                                toastr.error("❌ 伺服器錯誤，請稍後再試");
                                instance.setDate(instance.input.defaultValue, true);
                            }
                        });
                    }
                }
            });
        });
        </script>
    <!--獨立index使用時間套件-->
}
