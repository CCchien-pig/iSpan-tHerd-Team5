@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.TagListVM>

@{
    ViewData["Title"] = "標籤管理";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        📑 標籤管理
    </div>
    <div class="card-body">
       @* 🔍 查詢表單 *@
<form asp-action="Index" method="get" class="mb-2">
    <div class="d-flex justify-content-between align-items-center">

        <!-- 左邊：功能按鈕 -->
        <div class="d-flex align-items-center">
            <a asp-action="Create"
               class="btn btn-outline-secondary btn-lg me-2">
                ➕ 新增標籤
            </a>
        </div>

        <!-- 右邊：查詢條件 -->
        <div class="input-group input-group-sm" style="max-width:720px;">
            <span class="input-group-text">每頁筆數</span>
            <select name="pageSize" class="form-select form-select-sm"
                    style="max-width:100px;"
                    onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 5)">5 筆</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 筆</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 筆</option>
            </select>

            <span class="input-group-text">狀態</span>
            <select name="status" class="form-select form-select-sm"
                    style="max-width:120px;"
                    onchange="this.form.submit()">
                        <option value="" selected="@(String.IsNullOrEmpty(ViewBag.Status))">全部</option>
                        <option value="active" selected="@(ViewBag.Status == "active")">啟用</option>
                        <option value="inactive" selected="@(ViewBag.Status == "inactive")">停用</option>
            </select>

            <input type="text" name="keyword" value="@ViewBag.Keyword"
                   class="form-control form-control-sm"
                   style="max-width:240px;"
                   placeholder="輸入標籤名稱..." />

            <button type="submit" class="btn btn-secondary btn-sm">🔍 搜尋</button>
        </div>
    </div>
</form>

                      
        <!-- 標籤列表 -->
        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                <tr>
                    <th># ID</th>
                    <th>📄 標籤名稱</th>
                    <th>📌 狀態</th>
                    <th>⏰ 最後修改日期</th>
                    <th>⚡ 動作</th>
                </tr>                
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- 標籤 ID 灰色小字 -->
                        <td>
                            <span class="text-muted">#@item.TagId</span>
                        </td>

                        <!-- 標籤名稱：加上 badge 讓它像「標籤貼紙」 -->
                        <td>
                            <span class="badge rounded-pill bg-light text-dark border px-3 py-2 shadow-sm">
                                🏷️ @item.TagName
                            </span>
                        </td>

                        <!-- 狀態：用 badge 呈現 -->
                        <td>
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary") px-3 py-2">
                                @(item.IsActive ? "啟用" : "停用")
                            </span>
                        </td>
                        <!-- 最後修改時間 -->
                        <td>
                            <span class="text-muted">
                                @item.RevisedDate?.ToString("yyyy-MM-dd HH:mm")
                            </span>
                        </td>
                        <td>                            
                            <a asp-action="Edit" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-warning">✏️ 編輯</a>
                            <a asp-action="Details" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-info">👁 檢視</a>
                            <a asp-action="Delete" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-danger">🗑️ 刪除</a>                            
                        </td>
                        <!-- 操作按鈕群組化 -->
                        @* <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TagId"
                                   class="btn btn-outline-warning">✏️ 編輯</a>
                                <a asp-action="Details" asp-route-id="@item.TagId"
                                   class="btn btn-outline-info">👁 檢視</a>
                                <a asp-action="Delete" asp-route-id="@item.TagId"
                                   class="btn btn-outline-danger">🗑️ 刪除</a>
                            </div>
                        </td> *@
                    </tr>
                }

            </tbody>
        </table>

        <!-- 分頁控制 -->
        <div class="d-flex justify-content-center">
            @Html.PagedListPager(
            Model,
            page => Url.Action("Index", new { page, keyword = ViewBag.Keyword, pageSize = ViewBag.PageSize }),
                        new PagedListRenderOptions
                        {
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            UlElementClasses = new[] { "pagination" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" }
                        })
        </div>
    </div>
</div>
