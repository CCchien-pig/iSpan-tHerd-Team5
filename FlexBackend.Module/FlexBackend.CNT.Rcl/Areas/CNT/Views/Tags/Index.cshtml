@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.TagListVM>

@section Styles {
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/backtotop.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/fixedtable.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}

@{
    ViewData["Title"] = "標籤管理";
}

<!-- 🔍 查詢表單 -->
<form asp-action="Index" method="get" class="mb-2 d-flex align-items-center">

    <!-- 左邊：功能按鈕 -->
    <div class="d-flex align-items-center me-auto">
        <a asp-action="Create"
           class="btn btn-outline-secondary btn-lg">
            ➕ 新增標籤
        </a>
    </div>

    <!-- 中間：查詢條件 -->
    <div class="mx-auto">
        <div class="input-group input-group-sm" style="max-width:720px;">
            <span class="input-group-text">每頁筆數</span>
            <select name="pageSize" class="form-select form-select-sm"
                    style="max-width:100px;"
                    onchange="this.form.submit()">
                <option value="5" selected="@(ViewBag.PageSize == 5)">5 筆</option>
                <option value="10" selected="@(ViewBag.PageSize == 10)">10 筆</option>
                <option value="20" selected="@(ViewBag.PageSize == 20)">20 筆</option>
                <option value="50" selected="@(ViewBag.PageSize == 50)">50 筆</option>
                <option value="100" selected="@(ViewBag.PageSize == 100)">100 筆</option>
            </select>

            <span class="input-group-text">狀態</span>
            <select name="status" class="form-select form-select-sm"
                    style="max-width:120px;"
                    onchange="this.form.submit()">
                <option value="" selected="@(String.IsNullOrEmpty(ViewBag.Status))">全部</option>
                <option value="active" selected="@(ViewBag.Status == "active")">啟用</option>
                <option value="inactive" selected="@(ViewBag.Status == "inactive")">停用</option>
            </select>

            <input type="text" name="keyword" value="@ViewBag.Keyword"
                   class="form-control form-control-sm"
                   style="max-width:240px;"
                   placeholder="輸入標籤名稱..." />

            <button type="submit" class="btn btn-secondary btn-sm">🔍 搜尋</button>
            <a asp-action="Index" class="btn btn-outline-dark btn-sm">❌ 清除</a>
        </div>
    </div>
</form>

<!-- ⭐ 篩選條件列 -->
@if (!string.IsNullOrEmpty(ViewBag.Keyword) || !string.IsNullOrEmpty(ViewBag.StatusName))
{
    <div class="alert alert-info border rounded p-2 mb-2 d-flex align-items-center flex-wrap">
        <span class="fw-bold me-2">🔎 篩選條件：</span>

        @* 關鍵字 *@
        @if (!string.IsNullOrEmpty(ViewBag.Keyword))
        {
            <span class="badge bg-primary d-flex align-items-center me-2">
                關鍵字：「@ViewBag.Keyword」
                <a asp-action="Index"
                   asp-route-status="@ViewBag.Status"
                   asp-route-pageSize="@ViewBag.PageSize"
                   class="btn-close btn-close-white ms-2"
                   title="移除關鍵字"></a>
            </span>
        }

        @* 狀態 *@
        @if (!string.IsNullOrEmpty(ViewBag.StatusName))
        {
            <span class="badge bg-success d-flex align-items-center me-2">
                狀態：@ViewBag.StatusName
                <a asp-action="Index"
                   asp-route-keyword="@ViewBag.Keyword"
                   asp-route-pageSize="@ViewBag.PageSize"
                   class="btn-close btn-close-white ms-2"
                   title="移除狀態"></a>
            </span>
        }

        <a asp-action="Index" class="btn btn-outline-dark btn-sm">❌ 清除全部</a>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-secondary-subtle text-dark fw-bold d-flex align-items-center">
        📑 標籤管理
    </div>
    <div class="card-body">
        <!-- 標籤列表 -->
        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th># ID</th>
                    <th>📄 標籤名稱</th>
                    <th>📌 狀態</th>
                    <th>⏰ 最後修改日期</th>
                    <th>⚡ 動作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span class="text-muted">#@item.TagId</span></td>
                        <td>
                            <span class="badge rounded-pill bg-light text-dark border px-3 py-2 shadow-sm">
                                🏷️ @item.TagName
                            </span>
                        </td>
                        <td>
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                @(item.IsActive ? "啟用" : "停用")
                            </span>
                        </td>
                        <td>
                            <span class="text-muted">
                                @item.RevisedDate?.ToString("yyyy-MM-dd HH:mm")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-warning">✏️ 編輯</a>
                            <a asp-action="Details" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-info">👁 檢視</a>
                            <a asp-action="Delete" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-danger">🗑️ 刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- ⬆️ 回頂部 -->
        <button onclick="scrollToTop()" id="btnTop"
                class="btn rounded-circle shadow-lg"
                data-bs-toggle="tooltip" data-bs-placement="left" title="回到頂部">
            <i class="bi bi-arrow-up-short fs-2"></i>
        </button>

        <!-- 分頁控制 -->
        <div class="d-flex justify-content-center">
            @Html.PagedListPager(
            Model,
            page => Url.Action("Index", new { page, keyword = ViewBag.Keyword, status = ViewBag.Status, pageSize = ViewBag.PageSize }),
                        new PagedListRenderOptions
                        {
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            UlElementClasses = new[] { "pagination" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" }
                        })
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        window.addEventListener("scroll", function () {
            let btn = document.getElementById("btnTop");
            if (document.documentElement.scrollTop > 200) {
                btn.classList.add("show");
            } else {
                btn.classList.remove("show");
            }
        });
    </script>
}
