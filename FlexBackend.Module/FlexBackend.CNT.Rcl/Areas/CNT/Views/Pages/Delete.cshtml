@model FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.PageEditVM
@{
    ViewData["Title"] = "刪除文章";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-danger text-white fw-bold">
        ⚠️ 刪除文章
    </div>
    <div class="card-body">
        <h5 class="mb-3 text-danger">你確定要刪除這篇文章嗎？</h5>

        <dl class="row">
            <dt class="col-sm-2">文章標題</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">狀態</dt>
            <dd class="col-sm-10">@Model.StatusText</dd>

            <dt class="col-sm-2">最後修改時間</dt>
            <dd class="col-sm-10">@Model.RevisedDate?.ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PageId" />

            <!-- 🔑 保留查詢狀態 -->
            <input type="hidden" asp-for="Page" />
            <input type="hidden" asp-for="PageSize" />
            <input type="hidden" asp-for="Keyword" />
            <input type="hidden" asp-for="StatusFilter" />

            <div class="d-flex gap-3 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">🔙 返回列表</a>
                <button type="submit" class="btn btn-outline-danger btn-lg">🗑 確認刪除</button>
            </div>
        </form>
    </div>
</div>
