@* Index.cshtml → 文章列表 *@
@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.PageListVM>
@section Styles{       
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">@* Bootstrap Icons 的引入檔*@
    <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/backtotop.css" asp-append-version="true" />@* 回頂部樣式 *@     
        <link rel="stylesheet" href="~/_content/FlexBackend.CNT.Rcl/css/fixedtable.css" asp-append-version="true" />@* 固定欄位樣式 *@  
    <style>
        .badge {
                font-size: 0.76rem;
                padding: 0.35em 0.6em;
            }
            .bg-pink {
                background-color: #d63384 !important; /* bootstrap pink */
            }
            .bg-purple {
                background-color: #6f42c1 !important; /* bootstrap purple */
            }

    </style>

}
<!-- ⭐ 在模組頁面手動引入通知 -->
<partial name="_AlertMessage" />

 @* 🔍 查詢表單 *@
<form asp-action="Index" method="get" class="mb-2 d-flex align-items-center">
    <!-- 左邊：功能按鈕 -->
    <div class="d-flex align-items-center me-auto">
        <a asp-action="Create"
           class="btn btn-outline-secondary btn-lg me-2">
            ➕ 建立文章資訊
        </a>
        <a asp-action="RecycleBin"
           class="btn btn-outline-secondary btn-lg text-danger fw-bold">
            🗑️ ［大型工業垃圾］桶
        </a>
    </div>

    <!-- 中間：查詢條件（置中） -->
    <div class="mx-auto" >
        <div class="input-group input-group-sm" style="max-width:960px;">
            <span class="input-group-text">每頁筆數</span>
            <select name="pageSize" class="form-select form-select-sm"
                    style="max-width:90px;"
                    asp-items="ViewBag.PageSizeList"
                    onchange="this.form.submit()"></select>

            <!-- 📂 狀態 + 分類 合併成一組 -->
            <span class="input-group-text">篩選條件</span>
            <select name="pageTypeId" class="form-select form-select-sm"
                    style="max-width:120px;"
                    asp-items="ViewBag.PageTypeList"
                    onchange="this.form.submit()"></select>
                <span class="input-group-text">|</span>
            <select name="status" class="form-select form-select-sm"
                    style="max-width:120px;"
                    asp-items="ViewBag.StatusList"
                    onchange="this.form.submit()"></select>
            <!-- 🔍 關鍵字 -->
            <input type="text" name="keyword"
                   value="@System.Net.WebUtility.HtmlEncode(ViewBag.Keyword)"
                   class="form-control form-control-sm"
                   style="max-width:300px;"
                   placeholder="輸入ID或標題..." />

            <button type="submit" class="btn btn-secondary btn-sm">🔍 查詢</button>
            <!-- ⭐ 清除篩選按鈕 -->
            <a asp-action="Index" class="btn btn-outline-dark btn-sm">❌ 清除</a>
        </div>
    </div>
</form>
@if (!string.IsNullOrEmpty(ViewBag.Keyword) 
    || !string.IsNullOrEmpty(ViewBag.StatusName) 
    || !string.IsNullOrEmpty(ViewBag.PageTypeName))
{
    <div class="alert alert-info border rounded p-2 mb-2 d-flex align-items-center flex-wrap">
        <span class="fw-bold me-2">🔎 篩選條件：</span>
         @* 分類 *@
        @if (!string.IsNullOrEmpty(ViewBag.PageTypeName))
        {
            <span class="badge bg-warning text-dark d-flex align-items-center me-2">
                分類：@ViewBag.PageTypeName
                <a asp-action="Index"
                   asp-route-keyword="@ViewBag.Keyword"
                   asp-route-status="@ViewBag.Status"
                   asp-route-pageSize="@Model.PageSize"
                   class="btn-close ms-2"
                   title="移除分類"></a>
            </span>
        }
        @* 狀態 *@
        @if (!string.IsNullOrEmpty(ViewBag.StatusName))
        {
            <span class="badge bg-success d-flex align-items-center me-2">
                狀態：@ViewBag.StatusName
                <a asp-action="Index"
                   asp-route-keyword="@ViewBag.Keyword"
                   asp-route-pageTypeId="@Context.Request.Query["pageTypeId"]"
                   asp-route-pageSize="@Model.PageSize"
                   class="btn-close btn-close-white ms-2"
                   title="移除狀態"></a>
            </span>
        }
         @* 關鍵字 *@
        @if (!string.IsNullOrEmpty(ViewBag.Keyword))
        {
            <span class="badge bg-primary d-flex align-items-center me-2">
                關鍵字：「@ViewBag.Keyword」
                <a asp-action="Index"
                   asp-route-status="@ViewBag.Status"
                   asp-route-pageTypeId="@Context.Request.Query["pageTypeId"]"
                   asp-route-pageSize="@Model.PageSize"
                   class="btn-close btn-close-white ms-2"
                   title="移除關鍵字"></a>
            </span>
        }               
        @* 清除全部，跟在最後面 *@
        <a asp-action="Index"   asp-route-pageSize="@Model.PageSize"   class="btn btn-outline-dark btn-sm">❌ 清除全部</a>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-secondary-subtle text-dark fw-bold d-flex align-items-center">
        📑 文章管理
    </div>
    <div class="card-body">       
        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>📄 文章標題</th>
                    <th>📂 文章分類</th>
                    <th>📌 文章狀態</th>
                    <th>⏰ 建立日期</th>
                    <th>⏰ 最後修改日期</th>
                    <th>⚡ 操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PageId</td>
                        <td>@Html.DisplayFor(m => item.Title)</td>
                        <td>
                            <span class="badge @item.PageTypeBadgeClass">
                                <i class="bi @item.PageTypeIcon me-1"></i> @item.PageTypeName
                            </span>
                        </td>
                        <td>
                            <span class="badge @item.StatusBadgeClass">
                                @item.StatusText
                            </span>
                        </td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @(item.RevisedDate.HasValue
                                                    ? item.RevisedDate.Value.ToString("yyyy-MM-dd HH:mm")
                                                    : Html.Raw("<span class=\"text-muted\">—</span>"))
                    </td>
                    <td>                        
                         <div>
                               <a asp-action="Edit" asp-area="CNT" asp-controller="Pages"
                                   asp-route-id="@item.PageId"
                                   asp-route-page="@Model.PageNumber"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-keyword="@ViewBag.Keyword"
                                   asp-route-status="@ViewBag.Status"
                                   class="btn btn-sm btn-outline-warning text-dark mb-1">✏️ 編輯</a>

                                <a asp-action="Details" asp-area="CNT" asp-controller="Pages"
                                    asp-route-id="@item.PageId"
                                    asp-route-page="@Model.PageNumber"
                                    asp-route-pageSize="@Model.PageSize"
                                    asp-route-keyword="@ViewBag.Keyword"
                                    asp-route-status="@ViewBag.Status"
                                    class="btn btn-sm btn-outline-info text-dark mb-1">ℹ️ 檢視</a>

                                <a asp-action="Delete" asp-area="CNT" asp-controller="Pages"
                                   asp-route-id="@item.PageId"
                                   asp-route-page="@Model.PageNumber"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-keyword="@ViewBag.Keyword"
                                   asp-route-status="@ViewBag.Status"
                                   class="btn btn-sm btn-outline-danger mb-1"
                                   onclick="return confirm('確定要刪除這篇文章嗎？');">🗑 刪除</a>
                            </div>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>

    </div>
    <div class="d-flex justify-content-center mb-2 text-muted">
        顯示第 <strong>@Model.FirstItemOnPage</strong> - <strong>@Model.LastItemOnPage</strong> 筆，
        共 <strong>@Model.TotalItemCount</strong> 筆資料
        （每頁 <strong>@Model.PageSize</strong> 筆，共 <strong>@Model.PageCount</strong> 頁）
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-center flex-grow-1">
                @Html.PagedListPager(
                            Model,
                            page => Url.Action("Index", new { 
                                page, 
                                keyword = ViewBag.Keyword, 
                                status = ViewBag.Status, 
                                pageSize = Model.PageSize,
                                pageTypeId = Context.Request.Query["pageTypeId"] // ⭐ 加這行
                            }),
                            new PagedListRenderOptions
                            {
                                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                UlElementClasses = new[] { "pagination" },
                                LiElementClasses = new[] { "page-item" },
                                PageClasses = new[] { "page-link" }
                            }
                        )
            </div>
        </div>
    </div>
     <!-- ⬆️ 回頂部 -->
        <button onclick="scrollToTop()" id="btnTop"
                class="btn rounded-circle shadow-lg"
                data-bs-toggle="tooltip" data-bs-placement="left" title="回到頂部">
            <i class="bi bi-arrow-up-short fs-2"></i>
        </button>
</div>
@section Scripts {
    <script>
              function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        window.addEventListener("scroll", function () {
            let btn = document.getElementById("btnTop");
            if (document.documentElement.scrollTop > 200) {
                btn.classList.add("show");
            } else {
                btn.classList.remove("show");
            }
        });
    </script>
}
