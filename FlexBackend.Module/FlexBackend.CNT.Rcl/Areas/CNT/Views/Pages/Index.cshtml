@* Index.cshtml → 文章列表 *@

@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.PageListVM>


<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white fw-bold d-flex justify-content-between align-items-center">
        📑 文章管理
         @* 🔍 查詢表單 *@
        <form asp-action="Index" method="get" class="d-flex me-3">
            <div class="input-group input-group-sm">
                <!-- 狀態下拉 -->
                <select name="status" class="form-select form-select-sm" asp-items="ViewBag.StatusList"></select>

                <!-- 關鍵字輸入 -->
                <input type="text" name="keyword" value="@ViewBag.Keyword"
                       class="form-control form-control-sm"
                       placeholder="輸入ID或標題..." />

                <!-- 查詢按鈕 -->
                <button type="submit" class="btn btn-secondary btn-sm">🔍 查詢</button>
            </div>
        </form>


        @* 功能按鈕 *@
        <div class="d-flex gap-3">
            <a asp-action="Create" class="btn btn-light btn-sm">➕ 發表文章</a>
            <a asp-action="RecycleBin" class="btn btn-light text-danger btn-sm" style="font-family:bold">🗑️ ［大型工業垃圾］桶</a>
        </div>
    </div>
    <div class="card-body">
         
        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>📄 標題</th>
                    <th>📌 狀態</th>
                    <th>⏰ 建立日期</th>
                    <th>⏰ 最後修改日期</th>
                    <th>⚡ 動作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PageId</td>
                        <td>@item.Title</td>
                        <td>
                            <span class="badge rounded-pill px-3 py-2
                                            @(item.Status == "1" ? "bg-success-subtle text-dark border border-success" :
                                            item.Status == "0" ? "bg-secondary-subtle text-dark border border-secondary" :
                                            item.Status == "2" ? "bg-warning-subtle text-dark border border-warning" :
                                            item.Status == "9" ? "bg-warning-subtle text-dark border border-warning" :
                                            "bg-danger text-white border border-danger")">
                                            @item.StatusText
                            </span>
                        </td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @(item.RevisedDate.HasValue
                            ? item.RevisedDate.Value.ToString("yyyy-MM-dd HH:mm")
                            : Html.Raw("<span class=\"text-muted\">—</span>"))
                    </td>
                    <td>
                        <div>
                            <a asp-action="Edit" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                               class="btn btn-sm btn-outline-warning text-dark mb-1">✏️編輯</a>

                                <a asp-action="Details" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                                   class="btn btn-sm btn-outline-info text-dark mb-1">👁檢視</a>

                                <a asp-action="Delete" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                                   class="btn btn-sm btn-outline-danger mb-1"
                                   onclick="return confirm('確定要刪除這篇文章嗎？');">🗑刪除</a>
                            </div>

                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-center flex-grow-1">
                @Html.PagedListPager(
                Model,
                page => Url.Action("Index", new { page, keyword = ViewBag.Keyword }),
                new PagedListRenderOptions
                {
                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    UlElementClasses = new[] { "pagination" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" }
                }
                )
            </div>
        </div>
    </div>
</div>
