@* Index.cshtml → 文章列表 *@
@model X.PagedList.IPagedList<FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.PageListVM>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white fw-bold d-flex justify-content-between align-items-center">
        📑 文章管理
    </div>
    <div class="card-body">

        @* 🔍 查詢表單 *@
        <form asp-action="Index" method="get" class="mb-2">
            <div class="d-flex justify-content-between align-items-center">

                <!-- 左邊：功能按鈕 -->
                <div class="d-flex align-items-center">
                    <a asp-action="Create"
                       class="btn btn-outline-secondary btn-lg  me-2">
                        ➕ 發表文章
                    </a>
                    <a asp-action="RecycleBin"
                       class="btn btn-outline-secondary btn-lg text-danger fw-bold ">
                        🗑️ ［大型工業垃圾］桶
                    </a>
                </div>

                <!-- 右邊：查詢條件 -->
                <div class="input-group input-group-sm" style="max-width:720px;">
                    <span class="input-group-text">每頁筆數</span>
                    <select name="pageSize" class="form-select form-select-sm"
                            style="max-width:100px;"
                            asp-items="ViewBag.PageSizeList"
                            onchange="this.form.submit()"></select>

                    <select name="status" class="form-select form-select-sm"
                            style="max-width:120px;"
                            asp-items="ViewBag.StatusList"
                            onchange="this.form.submit()"></select>


                    <input type="text" name="keyword"
                           value="@System.Net.WebUtility.HtmlEncode(ViewBag.Keyword)"
                           class="form-control form-control-sm"
                           style="max-width:240px;"
                           placeholder="輸入ID或標題..." />


                    <button type="submit" class="btn btn-secondary btn-sm">🔍 查詢</button>
                </div>

            </div>
        </form>

        <table class="table table-striped table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>📄 標題</th>
                    <th>📌 狀態</th>
                    <th>⏰ 建立日期</th>
                    <th>⏰ 最後修改日期</th>
                    <th>⚡ 動作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PageId</td>
                        <td>@Html.DisplayFor(m => item.Title)</td>
                        <td>
                            <span class="badge 
                                @(item.Status == PageStatus.Published ? "bg-success text-white border " :
                                item.Status == PageStatus.Draft ? "bg-secondary text-white " :
                                item.Status == PageStatus.Archived ? "bg-warning text-dark " :
                                item.Status == PageStatus.Deleted ? "bg-danger text-white" :
                                "bg-light text-dark")">
                                @Html.DisplayFor(m => item.StatusText)
                            </span>
                        </td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @(item.RevisedDate.HasValue
                                                    ? item.RevisedDate.Value.ToString("yyyy-MM-dd HH:mm")
                                                    : Html.Raw("<span class=\"text-muted\">—</span>"))
                    </td>
                    <td>
                        <div>
                            <a asp-action="Edit" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                               class="btn btn-sm btn-outline-warning text-dark mb-1">✏️編輯</a>

                                <a asp-action="Details" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                                   class="btn btn-sm btn-outline-info text-dark mb-1">👁檢視</a>

                                <a asp-action="Delete" asp-area="CNT" asp-controller="Pages" asp-route-id="@item.PageId"
                                   class="btn btn-sm btn-outline-danger mb-1"
                                   onclick="return confirm('確定要刪除這篇文章嗎？');">🗑刪除</a>
                            </div>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center mb-2 text-muted">
        顯示第 <strong>@Model.FirstItemOnPage</strong> - <strong>@Model.LastItemOnPage</strong> 筆，
        共 <strong>@Model.TotalItemCount</strong> 筆資料
        （每頁 <strong>@Model.PageSize</strong> 筆，共 <strong>@Model.PageCount</strong> 頁）
    </div>

    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div class="d-flex justify-content-center flex-grow-1">
                @Html.PagedListPager(
                Model,
                page => Url.Action("Index", new { page, keyword = ViewBag.Keyword, status = ViewBag.Status, pageSize = Model.PageSize }),
                                new PagedListRenderOptions
                                {
                                    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                    DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                    UlElementClasses = new[] { "pagination" },
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" }
                                }
                                )
            </div>
        </div>
    </div>
</div>
