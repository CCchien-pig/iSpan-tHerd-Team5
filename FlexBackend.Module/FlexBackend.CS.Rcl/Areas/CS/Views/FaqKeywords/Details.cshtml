@model FaqKeywordListVM

@{
    ViewData["Title"] = "關鍵字明細";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.KeywordId)</dt>
            <dd class="col-sm-10">@Model.KeywordId</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Keyword)</dt>
            <dd class="col-sm-10">@Model.Keyword</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FaqTitle)</dt>
            <dd class="col-sm-10">@Model.FaqTitle</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CreatedDate)</dt>
            <dd class="col-sm-10">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex" style="gap:.5rem;">
    <a asp-action="Edit" asp-route-id="@Model.KeywordId" class="btn btn-primary">
        <i class="fa-solid fa-pen me-1"></i> 編輯
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i> 回列表
    </a>
</div>
