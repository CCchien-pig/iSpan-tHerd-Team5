@* ====== 正確的型別：用 VM，而不是實體 ====== *@
@model IEnumerable<FaqKeywordListVM>

@{
    ViewData["Title"] = "FAQ 關鍵字設定";
}

@section Styles {
    <!-- DataTables × Bootstrap 5 -->
    <link href="https://cdn.datatables.net/2.3.3/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/4.0.3/css/fixedHeader.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />

    <style>
        /* 表頭 / 表格微調 */
        .table thead th {
            background: #f8f9fa;
            font-weight: 600;
            vertical-align: middle;
        }

        .table-sm > :not(caption) > * > * {
            padding: .55rem .6rem;
        }

        .table-clean > :not(caption) > * > * {
            border-bottom-color: #eee;
        }

        /* 紫色 badge（顯示 FAQ 標題） */
        :root {
            --faq-bg: #f3e8ff;
            --faq-bd: #e9d5ff;
            --faq-fg: #6d28d9;
            --faq-bg-h: #ede9fe;
        }

        .badge-faq {
            display: inline-block;
            padding: .28rem .5rem;
            font-size: .85rem;
            font-weight: 600;
            color: var(--faq-fg);
            background: var(--faq-bg);
            border: 1px solid var(--faq-bd);
            border-radius: .35rem;
            text-decoration: none;
            line-height: 1.1;
        }

            .badge-faq:hover {
                background: var(--faq-bg-h);
                color: var(--faq-fg);
            }

        /* 單行省略（FAQ 標題） */
        .line-clamp-1 {
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            max-width: 560px;
        }

        /* 小圖示按鈕 */
        .btn-icon {
            width: 2rem;
            height: 2rem;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: .5rem;
        }

        /* ===== 載入 Overlay（修正 keyframes） ===== */
        #kwWrap {
            position: relative;
        }

        .kw-loading {
            position: absolute;
            inset: 0;
            display: none;
            place-content: center;
            background: rgba(255,255,255,.65);
            backdrop-filter: blur(2px);
            z-index: 1050;
        }

        .kw-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: .6rem;
            padding: 1rem 1.25rem;
            background: #fff;
            border: 1px solid #e9d5ff;
            border-radius: .8rem;
            box-shadow: 0 6px 18px rgba(109,40,217,.08);
        }

        .kw-ring {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: 4px solid #e9d5ff;
            border-top-color: #6d28d9;
            animation: kw-spin .9s linear infinite;
        }
        

        {
            transform: rotate(360deg);
        }

        }

        .kw-q {
            display: flex;
            gap: .25rem;
            margin-top: .2rem;
        }

            .kw-q span {
                font: 700 28px/1 "Segoe UI",system-ui,-apple-system,"PingFang TC","Noto Sans TC",Arial,sans-serif;
                color: #6d28d9;
                filter: drop-shadow(0 2px 0 rgba(109,40,217,.1));
                animation: kw-bounce 1s ease-in-out infinite;
            }

                .kw-q span:nth-child(2) {
                    animation-delay: .12s;
                }

                .kw-q span:nth-child(3) {
                    animation-delay: .24s;
                }
        

        {
            transform: translateY(0);
            opacity: .45;
        }

        40% {
            transform: translateY(-8px);
            opacity: 1;
        }

        }

        .kw-msg {
            font-size: .9rem;
            color: #6d28d9;
            font-weight: 600;
            letter-spacing: .02em;
        }
    </style>
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p class="d-flex gap-2">
    <a asp-area="CS" asp-controller="FaqKeywords" asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> 新增關鍵字
    </a>
    <button type="button" id="btnDeleteSelected" class="btn btn-outline-danger" disabled>
        <i class="fa-regular fa-trash-can"></i> 刪除所選
    </button>
</p>

<!-- 取防偽權杖 -->
<form id="antiForgeryForm" method="post">
    @Html.AntiForgeryToken()
</form>

<div id="kwWrap">
    <!-- 載入動畫 -->
    <div id="kwLoader" class="kw-loading" aria-hidden="true">
        <div class="kw-card">
            <div class="kw-ring"></div>
            <div class="kw-q"><span>?</span><span>?</span><span>?</span></div>
            <div class="kw-msg">處理中…</div>
        </div>
    </div>

    <table id="kwTable" class="table table-sm table-hover table-clean align-middle">
        <thead>
            <tr>
                <th style="width:36px" class="text-center"><input type="checkbox" id="chkAll" /></th>
                <th>關鍵字</th>
                <th>建立時間</th>
                <th>所屬 FAQ</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var faqTitle = item.FaqTitle ?? "";
                var faqLink = Url.Action("Details", "Faqs", new { area = "CS", id = item.FaqId });

                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="js-row-check" value="@item.KeywordId" />
                    </td>
                    <td>@item.Keyword</td>
                    <td>@item.CreatedDate.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>
                        @if (string.IsNullOrWhiteSpace(faqTitle))
                        {
                            <span class="text-muted">（未對應 FAQ）</span>
                        }
                        else
                        {
                            <a class="badge-faq line-clamp-1" href="@faqLink" title="@faqTitle">@faqTitle</a>
                        }
                    </td>
                    <td class="text-nowrap">
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a asp-area="CS" asp-controller="FaqKeywords" asp-action="Edit" asp-route-id="@item.KeywordId"
                               class="btn btn-outline-primary btn-icon" data-bs-toggle="tooltip" title="編輯">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-area="CS" asp-controller="FaqKeywords" asp-action="Details" asp-route-id="@item.KeywordId"
                               class="btn btn-outline-secondary btn-icon" data-bs-toggle="tooltip" title="檢視">
                                <i class="fa-regular fa-eye"></i>
                            </a>
                            <button type="button"
                                    class="btn btn-outline-danger btn-icon js-delete"
                                    data-id="@item.KeywordId" data-title="@item.Keyword"
                                    data-bs-toggle="tooltip" title="刪除">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var deleteUrl = Url.Action("DeleteAjax", "FaqKeywords", new { area = "CS" });
    var deleteManyUrl = Url.Action("DeleteManyAjax", "FaqKeywords", new { area = "CS" });
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/2.3.3/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/4.0.3/js/dataTables.fixedHeader.min.js"></script>

    <script>
        // Overlay 控制
        function showLoading(){ $('#kwLoader').stop(true,true).fadeIn(120); }
        function hideLoading(){ $('#kwLoader').stop(true,true).fadeOut(150); }

        $(function(){
            const antiToken = $('#antiForgeryForm input[name="__RequestVerificationToken"]').val();

            // 全域 AJAX：開始/結束時顯示/隱藏載入動畫
            $(document).on('ajaxStart', showLoading)
                       .on('ajaxStop',  hideLoading);

            // DataTables
            const table = new DataTable('#kwTable', {
                fixedHeader: true,
                layout: {
                    topStart: 'pageLength',
                    topEnd: 'search',
                    bottomStart: 'info',
                    bottomEnd: 'paging'
                },
                paging: true,
                searching: true,
                ordering: true,
                language: { url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json" },
                columnDefs: [
                    { targets: 0, orderable:false, searchable:false, className:"text-center", width:36 },
                    { targets: -1, orderable:false, searchable:false, className:"text-nowrap", width:120 }
                ],
                order: [[1, 'asc']]
            });

            // DataTables 處理中也顯示 loading
            $('#kwTable').on('processing.dt', function (e, settings, processing) {
                processing ? showLoading() : hideLoading();
            });

            // Tooltip
            const initTips = () => {
                document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el=>{
                    const t = bootstrap.Tooltip.getInstance(el); if (t) t.dispose();
                    new bootstrap.Tooltip(el);
                });
            };
            initTips(); table.on('draw', initTips);

            // 全選/行選/按鈕狀態
            const $chkAll = $('#chkAll');
            const $btnDeleteSelected = $('#btnDeleteSelected');

            const refreshBulkUI = () => {
                const total = $('#kwTable .js-row-check').length;
                const checked = $('#kwTable .js-row-check:checked').length;
                $chkAll.prop('checked', total>0 && checked===total)
                       .prop('indeterminate', checked>0 && checked<total);
                $btnDeleteSelected.prop('disabled', checked===0);
            };
            $('#kwTable thead').on('change', '#chkAll', function(){
                const checked = $(this).is(':checked');
                $('#kwTable .js-row-check').prop('checked', checked);
                refreshBulkUI();
            });
            $('#kwTable').on('change', '.js-row-check', refreshBulkUI);
            table.on('draw', refreshBulkUI);

            // 單筆刪除
            $('#kwTable').on('click', '.js-delete', function(){
                const $btn = $(this);
                const id = $btn.data('id');
                const title = $btn.data('title');
                const safeTitle = $('<div>').text(title||('#'+id)).html();

                Swal.fire({
                    title: '確定要刪除嗎？',
                    html: `你將刪除關鍵字 <b>${safeTitle}</b>。此動作無法復原！`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '是的，刪除',
                    cancelButtonText: '取消',
                    reverseButtons: true,
                    focusCancel: true
                }).then(r=>{
                    if(!r.isConfirmed) return;
                    $btn.prop('disabled', true);

                    $.ajax({
                        url: '@deleteUrl',
                        type: 'POST',
                        headers: { 'RequestVerificationToken': antiToken },
                        data: { id },
                        success: function(res){
                            if(res && res.ok===true){
                                const $tr = $btn.closest('tr').addClass('table-danger');
                                $tr.fadeOut(160, function(){
                                    table.row($tr).remove().draw(false);
                                    Swal.fire({ title:'已刪除', icon:'success', timer:1200, showConfirmButton:false });
                                });
                            }else{
                                Swal.fire({ title:'刪除失敗', text: res?.message ?? '請稍後再試', icon:'error' });
                            }
                        },
                        error: function(){ Swal.fire({ title:'連線失敗', icon:'error' }); },
                        complete: function(){ $btn.prop('disabled', false); }
                    });
                });
            });

            // 批次刪除
            $btnDeleteSelected.on('click', function(){
                const ids = $('#kwTable .js-row-check:checked').map(function(){ return $(this).val(); }).get();
                if(ids.length===0) return;

                Swal.fire({
                    title: '批次刪除',
                    html: `將刪除 <b>${ids.length}</b> 筆關鍵字，確定？`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '是的，刪除',
                    cancelButtonText: '取消',
                    reverseButtons: true
                }).then(r=>{
                    if(!r.isConfirmed) return;

                    $.ajax({
                        url: '@deleteManyUrl',
                        type: 'POST',
                        headers: { 'RequestVerificationToken': antiToken },
                        traditional: true,        // ids=1&ids=2…
                        data: { ids: ids },
                        success: function(res){
                            if(res && res.ok===true){
                                $('#kwTable .js-row-check:checked').each(function(){
                                    const $tr = $(this).closest('tr').addClass('table-danger');
                                    $tr.fadeOut(140, function(){ table.row($tr).remove().draw(false); });
                                });
                                Swal.fire({ title:'已刪除', icon:'success', timer:1200, showConfirmButton:false });
                            }else{
                                Swal.fire({ title:'刪除失敗', text: res?.message ?? '請稍後再試', icon:'error' });
                            }
                        },
                        error: function(){ Swal.fire({ title:'連線失敗', icon:'error' }); },
                        complete: function(){ refreshBulkUI(); }
                    });
                });
            });
        });
    </script>
}
