                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Development Approach</h6>
                </div>
                <div class="card-body">
                    <p>SB Admin 2 makes extensive use of Bootstrap 4 utility classes…</p>
                    <p class="mb-0">Before working with this theme, get familiar with Bootstrap utilities.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>

    <script>
        // ========= helpers =========
        const $ = sel => document.querySelector(sel);
        const $$ = sel => Array.from(document.querySelectorAll(sel));
        const fmtMoney = n => '$' + n.toLocaleString();

        // 字型/顏色（貼近 SB Admin 2）
        Chart.defaults.color = '#858796';
        Chart.defaults.font.family =
            'Nunito, -apple-system, system-ui, Segoe UI, Roboto, Helvetica Neue, Arial, "Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"';

        // 產生假資料
        function makeDates(days) {
            const arr = [];
            for (let i = days - 1; i >= 0; i--) {
                const d = new Date(); d.setDate(d.getDate() - i);
                arr.push(d.toISOString().slice(0, 10));
            }
            return arr;
        }
        function genData(days = 30) {
            const labels = makeDates(days);

            // 讓營收有一點點趨勢 & 隨機波動
            let base = 30000 + Math.random() * 30000;
            const net = labels.map((_, i) => {
                base *= (1 + (Math.random() - 0.48) * 0.02); // 微幅上下
                return Math.round(base + Math.random() * 10000);
            });

            const orders = labels.map(() => Math.floor(60 + Math.random() * 120));

            // 通路占比三者合計 100
            const d = Math.random() * 40 + 35; // 35~75
            const s = Math.random() * Math.min(30, 100 - d - 10) + 10; // 10~(<=30)
            const r = 100 - d - s;
            const channelShare = { Direct: Math.round(d), Social: Math.round(s), Referral: Math.round(r) };

            // KPI
            const monthly = net.reduce((a, b) => a + b, 0);
            const annual = Math.round(monthly * 12 * (0.92 + Math.random() * 0.16)); // +-8%
            const task = Math.floor(30 + Math.random() * 60); // 30~90
            const pending = Math.floor(8 + Math.random() * 24);

            return { labels, net, orders, channelShare, kpi: { monthly, annual, task, pending } };
        }

        // ========= chart instances =========
        let areaChart, pieChart;

        function buildAreaChart(labels, net, orders) {
            const ctx = document.getElementById('myAreaChart').getContext('2d');
            const grad = ctx.createLinearGradient(0, 0, 0, 230);
            grad.addColorStop(0, 'rgba(78,115,223,0.35)'); // primary
            grad.addColorStop(1, 'rgba(78,115,223,0.00)');

            if (areaChart) areaChart.destroy();
            areaChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels,
                    datasets: [
                        {
                            label: 'Net Revenue',
                            data: net,
                            borderColor: 'rgba(78,115,223,1)',
                            backgroundColor: grad,
                            borderWidth: 2,
                            tension: .35,
                            yAxisID: 'y1',
                            pointRadius: 0,
                            fill: true
                        },
                        {
                            label: 'Orders',
                            data: orders,
                            borderColor: 'rgba(28,200,138,1)',
                            backgroundColor: 'rgba(28,200,138,0.08)',
                            borderWidth: 2,
                            tension: .35,
                            yAxisID: 'y2',
                            pointRadius: 0,
                            fill: false
                        }
                    ]
                },
                options: {
                    interaction: { mode: 'index', intersect: false },
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'top' } },
                    scales: {
                        y1: {
                            type: 'linear',
                            position: 'left',
                            ticks: {
                                callback: v => '$' + (v / 1000).toFixed(0) + 'k'
                            },
                            grid: { drawBorder: false }
                        },
                        y2: {
                            type: 'linear',
                            position: 'right',
                            grid: { drawOnChartArea: false, drawBorder: false }
                        },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        function buildPieChart(share) {
            const ctx = document.getElementById('myPieChart').getContext('2d');
            const labels = Object.keys(share);
            const values = Object.values(share);

            if (pieChart) pieChart.destroy();
            pieChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels,
                    datasets: [{
                        data: values,
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: { callbacks: { label: c => `${c.label}: ${c.parsed}%` } }
                    },
                    cutout: '65%'
                }
            });
        }

        function updateKpis(k) {
            $('#kpi-monthly').textContent = fmtMoney(k.monthly);
            $('#kpi-annual').textContent = fmtMoney(k.annual);
            $('#kpi-task').textContent = k.task + '%';
            $('#kpi-task-bar').style.width = k.task + '%';
            $('#kpi-task-bar').setAttribute('aria-valuenow', k.task);
            $('#kpi-pending').textContent = k.pending;
        }

        function refresh(days = 30) {
            const d = genData(days);
            buildAreaChart(d.labels, d.net, d.orders);
            buildPieChart(d.channelShare);
            updateKpis(d.kpi);
        }

        // 初始載入
        refresh(30);

        // 快速切換區間
        $$('.js-range').forEach(a => a.addEventListener('click', e => {
            e.preventDefault();
            const days = parseInt(a.dataset.days || '30', 10);
            refresh(days);
        }));

        // 重新產生（右上角按鈕）
        $('#btn-generate').addEventListener('click', () => refresh());
    </script>
}
