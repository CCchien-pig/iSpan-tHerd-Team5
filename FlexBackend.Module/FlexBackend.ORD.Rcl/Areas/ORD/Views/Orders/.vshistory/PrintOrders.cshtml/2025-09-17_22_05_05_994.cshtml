@model List<FlexBackend.ORD.Rcl.Areas.ORD.ViewModels.PrintOrderVM>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>出貨單</title>
    <style>
        body {
            font-family: "Microsoft JhengHei",Arial,sans-serif;
            margin: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        th {
            background: #f2f2f2;
        }

        .summary {
            margin-top: 20px;
            text-align: right;
            font-size: 14px;
        }

            .summary p {
                margin: 2px 0;
            }

        @@page {
            margin: 15mm;
        }

        .page-break {
            page-break-after: always;
        }
    </style>
</head>
<body>
    @foreach (var vm in Model)
    {
        var o = vm.Order;
        decimal subtotal = vm.Items?.Sum(x => x.Subtotal) ?? 0M;
        decimal discount = o.GetType().GetProperty("DiscountTotal")?.GetValue(o) as decimal? ?? 0M;
        decimal shipping = o.GetType().GetProperty("ShippingFee")?.GetValue(o) as decimal? ?? 0M;
        decimal total = subtotal - discount + shipping;

        <h2>tHerd 出貨單</h2>
        <p><strong>訂單編號：</strong>@o.OrderNo</p>
        <p><strong>收件人：</strong>@o.ReceiverName</p>
        <p><strong>電話：</strong>@o.ReceiverPhone</p>
        <p><strong>地址：</strong>@o.ReceiverAddress</p>
        <p><strong>配送方式：</strong>@vm.ShippingMethod</p>

        <table>
            <thead>
                <tr>
                    <th>商品名稱</th>
                    <th>規格</th>
                    <th>單價</th>
                    <th>數量</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in vm.Items)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.SpecCode</td>
                        <td>@item.UnitPrice.ToString("C0")</td>
                        <td>@item.Qty</td>
                        <td>@item.Subtotal.ToString("C0")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="summary">
            <p>優惠券： @(string.IsNullOrWhiteSpace(vm.CouponName) ? "-" : vm.CouponName)</p>
            <p>優惠折扣：@discount.ToString("C0")</p>
            <p>運費：@shipping.ToString("C0")</p>
            <p><strong>總金額：@total.ToString("C0")</strong></p>
        </div>

        <div class="page-break"></div>
    }
    <script>
        // 頁面載入後自動觸發列印
        window.onload = function () {
            window.print();
        };
    </script>
</body>
</html>
