@model FlexBackend.Infra.Models.CsFaqCategory
@{
    ViewData["Title"] = "分類內容";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">分類名稱</dt>
            <dd class="col-sm-10">@Model.CategoryName</dd>

            <dt class="col-sm-2">上層分類</dt>
            <dd class="col-sm-10">@Model.ParentCategory?.CategoryName ?? "（最上層）"</dd>

            <dt class="col-sm-2">排序</dt>
            <dd class="col-sm-10">@Model.OrderSeq</dd>

            <dt class="col-sm-2">啟用</dt>
            <dd class="col-sm-10">@(Model.IsActive ? "啟用" : "停用")</dd>

            <dt class="col-sm-2">建立時間</dt>
            <dd class="col-sm-10">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>

            <dt class="col-sm-2">修改時間</dt>
            <dd class="col-sm-10">@Model.RevisedDate?.ToString("yyyy/MM/dd HH:mm")</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-area="CS" asp-controller="FaqCategories" asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">
                <i class="fa-solid fa-pen"></i> 編輯
            </a>
            <a asp-area="CS" asp-controller="FaqCategories" asp-action="Index" class="btn btn-outline-secondary">返回列表</a>
        </div>
    </div>
</div>
