@model FaqKeywordEditVM

@{
    ViewData["Title"] = "新增關鍵字";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" rel="stylesheet" />
    <style>
        .page-actions {
            gap: .5rem;
        }

        .card {
            border-radius: .8rem;
        }

        .form-text {
            color: #6c757d;
        }
    </style>
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- FAQ（可搜尋下拉） -->
            <div class="mb-3">
                <label asp-for="FaqId" class="form-label"></label>
                <select asp-for="FaqId" class="form-select" asp-items="ViewBag.FaqId" id="FaqId"></select>
                <span asp-validation-for="FaqId" class="text-danger"></span>
                <div class="form-text">輸入關鍵字前，先選要對應的 FAQ。</div>
            </div>

            <!-- Keyword -->
            <div class="mb-3">
                <label asp-for="Keyword" class="form-label"></label>
                <input asp-for="Keyword" class="form-control" placeholder="請輸入關鍵字或同義詞…" />
                <span asp-validation-for="Keyword" class="text-danger"></span>
                <div class="form-text">例如：結帳、付款、運費、配送…</div>
            </div>

            <div class="d-flex page-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk me-1"></i> 儲存
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> 回列表
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        // 啟用可搜尋下拉（Choices.js）
        const faqSelect = document.getElementById('FaqId');
        if (faqSelect) {
            new Choices(faqSelect, {
                shouldSort: false,
                allowHTML: true,
                searchPlaceholderValue: '搜尋 FAQ 標題…',
                itemSelectText: '選擇',
                noResultsText: '找不到結果',
                noChoicesText: '沒有可選項目'
            });
        }
    </script>
}
