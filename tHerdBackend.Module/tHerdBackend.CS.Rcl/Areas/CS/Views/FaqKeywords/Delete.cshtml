@model FaqKeywordListVM

@{
    ViewData["Title"] = "刪除關鍵字";
}

<h1 class="mb-3 text-danger">@ViewData["Title"]</h1>

<div class="alert alert-warning">
    <i class="fa-solid fa-triangle-exclamation me-2"></i>
    確定要刪除這筆關鍵字嗎？此動作無法復原。
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.KeywordId)</dt>
            <dd class="col-sm-10">@Model.KeywordId</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Keyword)</dt>
            <dd class="col-sm-10">@Model.Keyword</dd>

            @* 這裡改：FaqTitle -> 多個 FAQ *@
            <dt class="col-sm-2">所屬 FAQ</dt>
            <dd class="col-sm-10">
                @if (Model.Faqs == null || Model.Faqs.Count == 0)
                {
                    <span class="text-muted">（未對應 FAQ）</span>
                }
                else
                {
                    <ul class="mb-0">
                        @foreach (var f in Model.Faqs)
                        {
                            <li>
                                <a asp-area="CS" asp-controller="Faqs" asp-action="Details" asp-route-id="@f.FaqId">
                                    @f.Title
                                </a>
                            </li>
                        }
                    </ul>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-inline">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.KeywordId" />
    <button type="submit" class="btn btn-danger">
        <i class="fa-regular fa-trash-can me-1"></i> 確認刪除
    </button>
</form>
<a asp-action="Index" class="btn btn-outline-secondary ms-1">取消</a>
