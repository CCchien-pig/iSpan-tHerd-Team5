@model tHerdBackend.Infra.Models.CsFaq
@{
    ViewData["Title"] = "刪除 FAQ";
}
@section Styles {
    <style>
                          .card {
                              border-radius: 1rem;
                          }</style>
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="mb-3">確定要刪除這筆 FAQ？</h5>
        <p class="text-muted mb-4">此動作無法復原。</p>

        <dl class="row small">
            <dt class="col-sm-2">標題</dt>
            <dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2">分類</dt>
            <dd class="col-sm-10">@Model.Category?.CategoryName ?? "未分類"</dd>
            <dt class="col-sm-2">排序</dt>
            <dd class="col-sm-10">@Model.OrderSeq</dd>
        </dl>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FaqId" />
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> 取消</a>
                <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i> 確認刪除</button>
            </div>
        </form>
    </div>
</div>
