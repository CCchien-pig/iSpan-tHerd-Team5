@model FlexBackend.CNT.Rcl.Areas.CNT.ViewModels.TagEditVM
@{
    ViewData["Title"] = "新增標籤";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white fw-bold">
        ➕ 新增標籤
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="TagName" class="form-label">標籤名稱</label>
                <input asp-for="TagName" class="form-control" />
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">啟用</label>
            </div>

            <button type="submit" class="btn btn-outline-success btn-lg">💾 儲存</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">↩ 返回列表</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
