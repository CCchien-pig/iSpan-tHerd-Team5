@* 共用卡片版型，包在主版面裡 *@
@model dynamic

@{
    Layout = "_Layout";  // 這樣就會保留左側選單、上方導覽列
    var headerText = ViewData["HeaderText"] ?? (Model != null ? Model.HeaderText : null);
    var headerIcon = ViewData["HeaderIcon"] ?? (Model != null ? Model.HeaderIcon : null);
    var headerClass = ViewData["HeaderClass"] ?? (Model != null ? Model.HeaderClass : "bg-light");
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header @headerClass d-flex align-items-center">
        @if (!string.IsNullOrEmpty(Convert.ToString(headerIcon)))
        {
            <span class="me-2">@Html.Raw(headerIcon)</span>
        }
        <span class="fw-bold">@headerText</span>
    </div>

    <div class="card-body">
        @RenderSection("CardBody", required: true)
    </div>

    @if (IsSectionDefined("CardFooter"))
    {
        <div class="card-footer d-flex justify-content-end">
            @RenderSection("CardFooter")
        </div>
    }
</div>
