@model IEnumerable<FlexBackend.Infra.Models.CntPageBlock>
@{
    int pageId = Model.FirstOrDefault()?.PageId ?? (ViewBag.PageId ?? 0);
}

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th style="width:80px">順序</th>
            <th style="width:120px">類型</th>
            <th>內容預覽</th>
            <th style="width:260px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.OrderSeq</td>
                <td><span class="badge bg-secondary">@b.BlockType</span></td>
                <td>
                    @if (b.BlockType == "richtext")
                    {
                        @Html.Raw((b.Content ?? "").Length > 80 ? b.Content!.Substring(0, 80) + "..." : b.Content)
                    }
                    else if (b.BlockType == "image")
                    {
                        if (!string.IsNullOrWhiteSpace(b.Content) && b.Content!.StartsWith("/"))
                        {
                            <img src="@b.Content" style="max-height:60px" />
                        }
                        else if (b.ImgId.HasValue)
                        {
                            <img src="/uploads/@b.ImgId" style="max-height:60px" />
                        }
                        else
                        {
                            <span class="text-muted">（尚無圖片）</span>
                        }
                    }
                </td>
                <td class="text-end">
                    <form asp-area="CNT" asp-controller="PageBlocks" asp-action="MoveUp" asp-route-id="@b.PageBlockId" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-secondary" type="submit">↑ 上移</button>
                        @Html.AntiForgeryToken()
                    </form>
                    <form asp-area="CNT" asp-controller="PageBlocks" asp-action="MoveDown" asp-route-id="@b.PageBlockId" method="post" class="d-inline ms-1">
                        <button class="btn btn-sm btn-outline-secondary" type="submit">↓ 下移</button>
                        @Html.AntiForgeryToken()
                    </form>
                    <a asp-area="CNT" asp-controller="PageBlocks" asp-action="Edit" asp-route-id="@b.PageBlockId" class="btn btn-sm btn-warning ms-2">編輯</a>
                    <a asp-area="CNT" asp-controller="PageBlocks" asp-action="Delete" asp-route-id="@b.PageBlockId" class="btn btn-sm btn-danger ms-1">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
