@using tHerdBackend.Core.DTOs.SUP.Stock
@using tHerdBackend.SUP.Rcl.Areas.SUP.ViewModels

@* _StockBatchInfoPartial.cshtml 唯讀欄位 *@

@model StockBatchEditDto

<form id="stockBatchEditForm">
    <input type="hidden" name="SkuId" value="@Model.SkuId" />
    <input type="hidden" name="StockBatchId" value="@Model.StockBatchId" />

    <div class="mb-2">
        <label>品牌</label>
        <input type="text" class="form-control" value="@Model.BrandName" readonly />
    </div>

    <div class="mb-2">
        <label>商品名稱</label>
        <input type="text" class="form-control" value="@Model.ProductName" readonly />
    </div>

    <div class="mb-2">
        <label>SKU</label>
        <input type="text" class="form-control" value="@Model.SkuCode" readonly />
    </div>

    <div class="mb-2">
        <label>製造日期</label>
        <input type="text" class="form-control"
               value="@Model.ManufactureDate?.ToString("yyyy-MM-dd")"
               readonly
               style="pointer-events:none;" />
    </div>

    <div class="mb-2">
        <label>批次現有庫存</label>
        <input type="number" class="form-control" id="CurrentQty" value="@Model.CurrentQty" readonly />
    </div>

    <div id="AdjustOptions" class="mb-2">
        <label>異動方式</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsAdd" id="Increase" value="true" @(Model.IsAdd ? "checked" : "")>
            <label class="form-check-label" for="Increase">增加</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="IsAdd" id="Decrease" value="false" @(!Model.IsAdd ? "checked" : "")>
            <label class="form-check-label" for="Decrease">減少</label>
        </div>
    </div>

    <div class="mb-2">
        <label>異動數量</label>
        <input type="number" class="form-control" id="ChangeQtyInput" name="ChangeQty" value="@Model.ChangeQty" />
        <small id="predictedStock" class="text-muted">預計庫存: @Model.CurrentQty</small>
    </div>

    <div class="mb-2">
        <label>備註</label>
        <textarea class="form-control" name="Remark">@Model.Remark</textarea>
    </div>

    <div class="text-end mt-3">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" id="saveStockChangeBtn">儲存</button>
    </div>
</form>



