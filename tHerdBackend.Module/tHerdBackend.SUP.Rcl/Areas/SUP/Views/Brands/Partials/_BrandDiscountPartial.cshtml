@using tHerdBackend.Core.DTOs.SUP
@model BrandDto
@* _BrandDiscountCreatePartial.cshtml（新增折扣表單） *@

@{
    var formAction = Url.Action("CreateDiscount", "Brands", new { area = "SUP" });
}

<form id="brandDiscountForm" action="@formAction" method="post" novalidate>
    @Html.AntiForgeryToken()
    @if (ViewBag.FormAction == "Edit")
    {
        <input type="hidden" asp-for="BrandId" />
    }

    <div class="container-fluid">
        <div class="form-floating mb-2">
            <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandSelect">
                <option value="">請選擇品牌</option>
            </select>
            <label asp-for="BrandId" class="form-label">@Html.DisplayNameFor(m => m.BrandId)</label>
            <span asp-validation-for="BrandId" class="text-danger mt-1 d-block ms-2"></span>
        </div>

        <div class="form-floating mb-2">
            <input asp-for="DiscountRate" class="form-control" type="number" step="0.01" />
            <label asp-for="DiscountRate" class="form-label">@Html.DisplayNameFor(m => m.DiscountRate)</label>
            <span asp-validation-for="DiscountRate" class="text-danger mt-1 d-block ms-2"></span>
        </div>

        <div class="row mb-2">
            <div class="col">
                <div class="form-floating">
                    <input asp-for="StartDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />                    <label asp-for="StartDate" class="form-label">@Html.DisplayNameFor(m => m.StartDate)</label>
                    <span asp-validation-for="StartDate" class="text-danger mt-1 d-block ms-2"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-floating">
                    <input asp-for="EndDate" class="form-control" type="date" min="@Model.StartDate?.ToString("yyyy-MM-dd")" />                    <label asp-for="EndDate" class="form-label">@Html.DisplayNameFor(m => m.EndDate)</label>
                    <span asp-validation-for="EndDate" class="text-danger mt-1 d-block ms-2"></span>
                </div>
            </div>
        </div>

        @* <div class="border rounded d-flex align-items-center px-3 my-3" style="height: 3.5rem;">
            <label class="form-label mb-0 me-3 flex-shrink-0" for="IsActive">品牌啟用狀態</label>
            <input type="hidden" name="IsActive" value="false" />
            <div class="form-check form-switch ms-3 mb-0">
                <input class="form-check-input" type="checkbox"
                       id="IsActive" name="IsActive"
                       value="true"
                       @(Model.IsActive ? "checked" : "")>
            </div>
        </div> *@

        <div class="modal-footer justify-content-center" style="padding-bottom: 0px;">
            <button type="button" class="btn btn-secondary me-3" data-bs-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-success">儲存</button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(function () {
            $.validator.unobtrusive.parse('#brandDiscountForm');
        });
    </script>
}