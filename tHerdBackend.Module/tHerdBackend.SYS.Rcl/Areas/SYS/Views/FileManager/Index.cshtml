@using Syncfusion.EJ2.FileManager
@{
    ViewData["Title"] = "FileManager 假資料測試畫面";
}

<h2 class="fw-bold mb-4 text-primary">
    📁 FileManager 假資料測試畫面
</h2>

<div class="card p-3 shadow-sm border-0">
    <ejs-filemanager id="fakeFileManager"
                     height="500px"
                     allowMultiSelection="true"
                     toolbarSettings="@(new FileManagerToolbarSettings { 
                         Items = new string[] { "NewFolder", "Upload", "Delete", "Download", "Rename", "Refresh" } 
                     })"
                     ajaxSettings="@(new FileManagerAjaxSettings {
                        Url = Url.Action("FileOperations", "FileManager", new { area = "SYS", mode = "fake" }),
                        UploadUrl = "#",
                        DownloadUrl = "#",
                        GetImageUrl = "#"
                    })"

                    >
    </ejs-filemanager>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            console.log("✅ FileManager 假資料測試頁已載入");
        });
    </script>
}
