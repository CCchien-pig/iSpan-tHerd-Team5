@{
    ViewData["Title"] = "上傳圖片測試";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" asp-controller="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label">選擇圖片</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">上傳</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}

@if (ViewBag.ImageUrl != null)
{
    <div class="mt-3">
        <img src="@ViewBag.ImageUrl" class="img-thumbnail" style="max-width:300px;" />
        <p>圖片網址：<a href="@ViewBag.ImageUrl" target="_blank">@ViewBag.ImageUrl</a></p>
    </div>
}
