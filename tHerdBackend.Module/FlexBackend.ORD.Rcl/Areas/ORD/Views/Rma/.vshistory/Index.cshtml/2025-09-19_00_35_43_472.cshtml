            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/ORD/Rma/Complete', { id: id }, function(response) {
                        if (response.ok) {
                            Swal.fire('成功', response.message, 'success').then(() => {
                                $('#rmaDetailModal').modal('hide');
                                location.reload();
                            });
