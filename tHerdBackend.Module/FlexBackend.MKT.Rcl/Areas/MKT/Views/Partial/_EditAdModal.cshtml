<div class="modal fade" id="adModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="adForm" enctype="multipart/form-data">
                <input type="hidden" name="AdId" value="@Model.AdId" />

                <div class="modal-header">
                    <h5 class="modal-title">編輯廣告</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">標題</label>
                        <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">內容</label>
                        <textarea name="Content" class="form-control">@Model.Content</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">廣告圖片</label>
                        <input type="file" name="ImgId" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">開始日期</label>
                        <input type="datetime-local" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">結束日期</label>
                        <input type="datetime-local" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-ddTHH:mm"))" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">狀態</label>
                        <select name="Status" class="form-select">
                            <option value="aActive" @(Model.Status == "aActive" ? "selected" : "")>上架</option>
                            <option value="aInactive" @(Model.Status == "aInactive" ? "selected" : "")>下架</option>
                        </select>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") />
                        <label class="form-check-label">啟用</label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">建檔人員</label>
                        <input type="text" name="Creator" value="@Model.Creator" class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <button type="button" id="btnDeleteAd" class="btn btn-danger">刪除</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">返回</button>
                </div>
            </form>
        </div>
    </div>
</div>
