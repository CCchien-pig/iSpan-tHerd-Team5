<div class="modal fade" id="editCouponModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="editCouponForm">
                <div class="modal-header">
                    <h5 class="modal-title">編輯優惠券</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>優惠券ID</label>
                        <input type="text" id="editCouponId" class="form-control" disabled />
                    </div>
                    <div class="mb-3">
                        <label>活動ID</label>
                        <input type="number" id="editCampaignId" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>規則ID</label>
                        <input type="number" id="editRuleId" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>優惠券名稱</label>
                        <input type="text" id="editCouponName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>優惠碼</label>
                        <input type="text" id="editCouponCode" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>優惠券狀態</label>
                        <select id="editStatus" class="form-select" required>
                            <option value="pInactive">未啟用</option>
                            <option value="pActive">啟用</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>開始時間</label>
                        <input type="datetime-local" id="editStartDate" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>結束時間</label>
                        <input type="datetime-local" id="editEndDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>折扣金額</label>
                        <input type="number" id="editDiscountAmount" class="form-control" step="0.01" />
                    </div>
                    <div class="mb-3">
                        <label>折扣百分比</label>
                        <input type="number" id="editDiscountPercent" class="form-control" step="0.01" />
                    </div>
                    <div class="mb-3">
                        <label>總數量</label>
                        <input type="number" id="editTotQty" class="form-control" required />
                    </div>
                    <!-- ✅ LeftQty 隱藏欄位 -->
                    <input type="hidden" id="editLeftQty" value="0" />
                    <div class="mb-3">
                        <label>每人限領</label>
                        <input type="number" id="editUserLimit" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>有效時數</label>
                        <input type="number" id="editValidHours" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>是否啟用</label><br />
                        <div class="form-check form-check-inline">
                            <input type="radio" name="editIsActive" value="true" class="form-check-input" checked />
                            <label class="form-check-label">啟用</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" name="editIsActive" value="false" class="form-check-input" />
                            <label class="form-check-label">停用</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="saveCouponBtn" class="btn btn-primary">儲存</button>
                    <button type="button" id="deleteCouponBtn" class="btn btn-danger">刪除</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">返回</button>
                </div>
            </form>
        </div>
    </div>
</div>
