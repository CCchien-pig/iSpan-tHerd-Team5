@* 編輯活動 Modal *@
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">編輯活動</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" />

                    <div class="mb-3">
                        <label>標題</label>
                        <input type="text" id="editTitle" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>活動類型</label>
                        <select id="editType" class="form-select">
                            <option value="cmd">滿額折扣</option>
                            <option value="csd">全館折扣</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>活動描述</label>
                        <input type="text" id="editDescription" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>適用商品類型</label><br />
                        <input type="checkbox" class="editProductType" value="eyes" />眼睛保健
                        <input type="checkbox" class="editProductType" value="skin" />皮膚護理
                        <input type="checkbox" class="editProductType" value="hair" />頭髮護理
                        <input type="checkbox" class="editProductType" value="face" />臉部護理
                    </div>

                    <div class="mb-3">
                        <label>活動開始日期</label>
                        <input type="date" id="editStart" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>活動結束日期</label>
                        <input type="date" id="editEnd" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>是否啟用</label><br />
                        <input type="radio" name="editIsActive" value="true" />啟用
                        <input type="radio" name="editIsActive" value="false" />未啟用
                    </div>

                    <div class="mb-3">
                        <label>活動狀態</label>
                        <select id="editStatus" class="form-select">
                            <option value="cActive">Active</option>
                            <option value="cInactive">Inactive</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>建檔人員</label>
                        <input type="number" id="editCreator" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>活動圖片Id</label>
                        <input type="number" id="editImgId" class="form-control" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" id="backBtn" class="btn btn-secondary">返回</button>
                    <button type="button" id="deleteBtn" class="btn btn-danger">刪除活動</button>
                    <button type="button" id="saveBtn" class="btn btn-primary">儲存</button>
                </div>

            </form>
        </div>
    </div>
</div>
