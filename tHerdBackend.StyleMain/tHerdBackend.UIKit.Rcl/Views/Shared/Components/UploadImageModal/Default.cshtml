@model tHerdBackend.UIKit.Rcl.ViewComponents.UploadImageModal.UploadImageModalViewComponent.UploadImageModalViewModel

<!-- Modal -->
<div class="modal fade" id="@Model.ModalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-file-earmark-arrow-up"></i> 上傳檔案
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div id="form_@Model.ModalId"
                 data-action="@Url.Action("SaveFiles", "UploadTest", new { area = "SYS" })"
                 data-method="post"
                 enctype="multipart/form-data">

                <div class="modal-body">
                    <!-- 上傳模式切換 -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold d-flex align-items-center gap-2">
                            <i class="bi bi-lightbulb text-warning"></i>
                            上傳位置
                        </label>

                        <div class="btn-group upload-mode-group" role="group">
                            <input type="radio" class="btn-check" name="IsExternal"
                                   id="modeCloud_@Model.ModalId" value="true"
                                   @(Model.DefaultIsExternal ? "checked" : "") />
                            <label class="btn btn-upload" for="modeCloud_@Model.ModalId">
                                <i class="bi bi-cloud-upload"></i> Cloudinary
                            </label>

                            <input type="radio" class="btn-check" name="IsExternal"
                                   id="modeLocal_@Model.ModalId" value="false"
                                   @(!Model.DefaultIsExternal ? "checked" : "") />
                            <label class="btn btn-upload" for="modeLocal_@Model.ModalId">
                                <i class="bi bi-hdd"></i> 本地上傳
                            </label>
                        </div>
                    </div>

                    <!-- 預覽區 -->
                    <fieldset id="previewArea_@Model.ModalId" class="border rounded p-3 mt-4 d-none">
                        <legend class="w-auto px-2">預覽區</legend>
                        <div id="preview_@Model.ModalId" class="img-grid"></div>
                    </fieldset>

                    <!-- 拖拉區 -->
                    <div id="dropArea_@Model.ModalId"
                         class="border border-2 border-primary rounded p-5 text-center mb-3 bg-light">
                        <p class="mb-2">拖拉檔案到這裡，或點擊下方選擇檔案</p>

                        <input type="file"
                               id="fileInput_@Model.ModalId"
                               name="Meta[0].File"
                               class="form-control d-none"
                               multiple
                               accept="image/*,video/*,application/pdf" />

                        <button type="button"
                                id="selectBtn_@Model.ModalId"
                                class="btn btn-outline-primary">
                            選擇檔案
                        </button>
                    </div>

                    <div id="hiddenInputs_@Model.ModalId"></div>

                    <input type="hidden" name="ModuleId" value="@Model.ModuleId" />
                    <input type="hidden" name="ProgId" value="@Model.ProgId" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                        取消
                    </button>
                    <button type="button"
                            id="btnConfirmUpload_@Model.ModalId"
                            class="btn btn-success btn-sm">
                        <i class="bi bi-check-lg"></i> 確認上傳
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 全域 Loading 遮罩 Partial -->
@await Html.PartialAsync("_GlobalLoadingPartial")

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            UploadImageModal.init("@Model.ModalId");

           // === ✅ 顯示全域遮罩 ===
            if (typeof showGlobalLoading === "function") {
                showGlobalLoading("載入中，請稍候...");
            }

            try {
                // 呼叫初次載入函式（由 update-image.js 提供）
                if (typeof refreshFileList === "function") {
                    await refreshFileList();
                } else {
                    console.warn("⚠️ 找不到 refreshFileList()");
                }
            } catch (err) {
                console.error("❌ 初次載入失敗：", err);
                Swal.fire("錯誤", "載入圖片列表時發生問題", "error");
            } finally {
                // === ✅ 隱藏全域遮罩 ===
                if (typeof hideGlobalLoading === "function") {
                    hideGlobalLoading();
                }
            }

            // Debug：確認全域遮罩存在
            const loader = document.getElementById("globalLoading");
            if (!loader) {
                console.warn("⚠️ 找不到 #globalLoading，請確認 _GlobalLoadingPartial 有正確載入。");
            }
        });
    </script>
}

<style>
    .upload-mode-group .btn-upload {
        border: 2px solid #a970ff;
        color: #a970ff;
        background-color: transparent;
        font-weight: 600;
        transition: background-color 0.12s ease-out, color 0.08s ease-out;
        border-radius: 0;
        box-shadow: none;
    }

        .upload-mode-group .btn-upload:hover {
            background-color: rgba(169, 112, 255, 0.12);
            border-color: #a970ff;
            color: #a970ff;
        }

    .upload-mode-group input:checked + .btn-upload {
        background-color: #7d48ff;
        border-color: #7d48ff;
        color: #fff !important;
    }

        .upload-mode-group input:checked + .btn-upload:hover {
            background-color: #6c3be8;
            border-color: #6c3be8;
        }

    .upload-mode-group .btn-upload:first-of-type {
        border-radius: 8px 0 0 8px;
    }

    .upload-mode-group .btn-upload:last-of-type {
        border-radius: 0 8px 8px 0;
    }
</style>
