@model tHerdBackend.UIKit.Rcl.ViewComponents.UploadImageModal.UploadImageModalViewComponent.UploadImageModalViewModel

<!-- 這顆是打開彈窗的按鈕，可以放在頁面任意位置 -->
<button type="button"
        class="btn btn-primary btn-sm mb-3"
        data-bs-toggle="modal"
        data-bs-target="#uploadImageModal">
    <i class="bi bi-upload"></i> 上傳檔案
</button>

<!-- Modal -->
<div class="modal fade" id="uploadImageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-file-earmark-arrow-up"></i> 上傳檔案
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="Index"
                  asp-controller="UploadTest"
                  asp-area="SYS"
                  method="post"
                  enctype="multipart/form-data">

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold d-flex align-items-center gap-2">
                            <i class="bi bi-lightbulb text-warning"></i>
                            上傳位置
                        </label>

                        <div class="btn-group upload-mode-group" role="group" aria-label="Upload mode">
                            <input type="radio" class="btn-check" name="IsExternal"
                                   id="modeCloud_uploadImageModal" value="true"
                                   @(Model.DefaultIsExternal ? "checked" : "") />
                            <label class="btn btn-upload" for="modeCloud_uploadImageModal">
                                <i class="bi bi-cloud-upload"></i> Cloudinary
                            </label>

                            <input type="radio" class="btn-check" name="IsExternal"
                                   id="modeLocal_uploadImageModal" value="false"
                                   @(!Model.DefaultIsExternal ? "checked" : "") />
                            <label class="btn btn-upload" for="modeLocal_uploadImageModal">
                                <i class="bi bi-hdd"></i> 本地上傳
                            </label>
                        </div>
                    </div>

                    <!-- 預覽區 -->
                    <fieldset id="previewArea_uploadImageModal" class="border rounded p-3 mt-4 d-none">
                        <legend class="w-auto px-2">預覽區</legend>
                        <div id="preview_uploadImageModal" class="img-grid"></div>
                    </fieldset>

                    <!-- 拖拉區塊 -->
                    <div id="dropArea_uploadImageModal"
                         class="border border-2 border-primary rounded p-5 text-center mb-3 bg-light">
                        <p class="mb-2">拖拉檔案到這裡，或點擊下方選擇檔案</p>

                        <input type="file"
                               id="fileInput_uploadImageModal"
                               name="Meta[0].File"
                               class="form-control d-none"
                               multiple
                               accept="image/*,video/*,application/pdf" />

                        <button type="button"
                                id="selectBtn_uploadImageModal"
                                class="btn btn-outline-primary">
                            選擇檔案
                        </button>
                    </div>

                    <div id="hiddenInputs_uploadImageModal"></div>

                    <input type="hidden" name="ModuleId" value="@Model.ModuleId" />
                    <input type="hidden" name="ProgId" value="@Model.ProgId" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                        取消
                    </button>
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="bi bi-check-lg"></i> 確認上傳
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* 一樣的紫色 toggle group */
    .upload-mode-group .btn-upload {
        border: 2px solid #a970ff;
        color: #a970ff;
        background-color: transparent;
        font-weight: 600;
        transition: background-color 0.12s ease-out, color 0.08s ease-out, border-color 0.12s ease-out;
        border-radius: 0;
        box-shadow: none;
    }

        .upload-mode-group .btn-upload:hover {
            background-color: rgba(169, 112, 255, 0.12);
            border-color: #a970ff;
            color: #a970ff;
        }

    .upload-mode-group input:checked + .btn-upload {
        background-color: #7d48ff;
        border-color: #7d48ff;
        color: #fff !important;
    }

        .upload-mode-group input:checked + .btn-upload:hover {
            background-color: #6c3be8;
            border-color: #6c3be8;
        }

    .upload-mode-group .btn-upload:first-of-type {
        border-radius: 8px 0 0 8px;
    }

    .upload-mode-group .btn-upload:last-of-type {
        border-radius: 0 8px 8px 0;
    }
</style>
